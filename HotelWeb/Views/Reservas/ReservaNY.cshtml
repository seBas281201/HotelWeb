@model HotelWeb.Models.Habitacione;

@{
	Layout = "~/Views/Shared/_Reserva.cshtml";
}

<img src="" class="main-image fade-in""/>
@section thumb {
    <img src="@Url.Content(Model.UrlImagen)" class="thumb" />
    <img src="@Url.Content(@Model.UrlImagenServicio1)" class="thumb" />
    <img src="@Url.Content(@Model.UrlImagenServicio2)" class="thumb" />
    @if (TempData["MensajeInformacion"] != null){
        <div class="reserva-confirm">
            @TempData["MensajeInformacion"]
        </div>
    }
}

@section FormContent {
    <form asp-controller="Reservas" asp-action="ReservaNY" method="post">
        <h1 class="title">@Model.Nombre</h1>
        <p class="price">$@Model.Precio COP / noche</p>

        <div class="form-group">
            <label>Fecha de ingreso</label>
            <input type="date" name="FechaIngreso" required />
            <input type="hidden" name="IdHabitacion" value="@Model.IdHabitacion" />

        </div>

        <div class="form-group">
            <label>Fecha de salida</label>
            <input type="date" name="FechaSalida" required />
        </div>

        <div class="form-group">
            <label>Cantidad de huéspedes</label>
            <select id="guests" name="NroHuespedes" required>
                <option value="" disabled selected>Seleccionar</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

        <div class="button-group">
            <button type="submit" class="reservar">Reservar ahora</button>
            <a href="@Url.Action("VerHabitacionesSedePrincipal", "Sedes")" class="back-button">Regresar</a>
        </div>

        <div class="description">
            <h3>Breve descripción</h3>
            <p>
                @Model.DescripcionBreve
            </p>
        </div>
    </form>
    
}

