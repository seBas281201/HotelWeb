@model HotelWeb.ViewModels.UsuarioUpdateVM;

<title>Sang - Modificar usuario</title>
<link rel="stylesheet" href="~/css/ModificarUsuario.css" asp-append-version="true">
<section class="product-container">
    <div class="hero-text">
        <h1>
            Aquí puedes modificar los
            <span class="sang-container">
                <span class="gradient-text">permisos</span>
                <svg class="decorative-curve" width="150" height="50" viewBox="0 0 200 50" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="sangGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" stop-color="#9A8CFF" />
                            <stop offset="50%" stop-color="#6F5CC2" />
                            <stop offset="100%" stop-color="#3E3A70" />
                        </linearGradient>
                    </defs>
                    <path d="M0,30 C50,10 150,10 200,30" stroke="url(#sangGradient)" stroke-width="3" fill="none" />
                    <path d="M0,35 C50,15 150,15 200,35" stroke="url(#sangGradient)" stroke-width="2" fill="none" opacity="0.6" />
                </svg>
            </span>
        </h1>
        <p>de alguno de los usuarios existentes en el sistema.</p>
    </div>
    <div class="modification-form">
        <form asp-controller="Admin" asp-action="ModuloUsuarios" method="post">
            <p class="category">Control de permisos</p>
            <h1 class="title">Modificación de usuarios</h1>
            <div class="form-group">
                <label for="email">Correo electrónico del usuario a modificar</label>
                <input type="email" required  asp-for="Correo"/>
            </div>
            <div class="form-group">
                <label>Selecciona el tipo de permiso</label>
                <select required asp-for="Rol">
                    <option value="" disabled selected>Selecciona una opción</option>
                    <option value="Usuario">Usuario</option>
                    <option value="Administrador">Administrador</option>
                </select>
            </div>
            <div class="button-group">
                <button type="submit" class="aplicar">Aplicar cambios</button>
                <a asp-controller="Admin" asp-action="VerModulo" class="back-button">Regresar</a>
            </div>
            @if(ViewData["MensajeInfo"] != null){

                <p class="form-respuesta">@ViewData["MensajeInfo"]</p>

            }
        </form>
    </div>
</section>